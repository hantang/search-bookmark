{
  "manifest_version": 3,
  "name": "Bookmark Search",
  "version": "0.4.2",
  "description": "HTML Bookmark Search with RegExp",
  "short_name": "bookmark-search",
  "author": "hantang",
  "homepage_url": "https://github.com/hantang/search-bookmark/",
  "default_locale": "en",
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  },
  "optional_host_permissions": ["*://*/*"],
  "permissions": ["activeTab", "bookmarks", "history", "favicon", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icons/icon-16x16.png",
    "48": "assets/icons/icon-48x48.png",
    "128": "assets/icons/icon-128x128.png"
  }
}
